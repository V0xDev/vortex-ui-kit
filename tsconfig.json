{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist/types",
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@stories/*": ["src/stories/*"]
    },
    "noEmit": false
  },
  "include": ["src/**/*.ts", "src/**/*.vue", "src/**/*.mdx"],
  "exclude": [
    "node_modules",
    "**/*.stories.ts",
    "./src/stories",
    "**/@types/mdx/**/*",
    "**/*.mdx"
  ]
}
