{
  "name": "vortex-ui-kit",
  "version": "1.0.0",
  "description": "UI Kit built with Vue 3, TypeScript, SCSS, and Storybook",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "publish": "npm publish --access public"
  },
  "files": [
    "dist",
    "assets",
    "static"
  ],
  "exports": {
    ".": {
      "import": "./dist/vortex.es.js",
      "require": "./dist/vortex.umd.js"
    },
    "./styles": "./dist/style.css"
  },
  "dependencies": {
    "@vueuse/core": "^12.5.0",
    "vue": ">=3"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.4",
    "@storybook/addon-essentials": "^8.5.8",
    "@storybook/addon-onboarding": "^8.5.8",
    "@storybook/blocks": "^8.5.8",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/vue3": "^8.5.8",
    "@storybook/vue3-vite": "^8.5.8",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vue/tsconfig": "^0.7.0",
    "css-loader": "^7.1.2",
    "sass": "^1.84.0",
    "sass-loader": "^16.0.4",
    "storybook": "^8.5.8",
    "style-loader": "^4.0.0",
    "typescript": "~5.6.2",
    "vite": "^6.1.1",
    "vite-plugin-dts": "^4.5.0",
    "vue-tsc": "^2.2.0"
  },
  "peerDependencies": {
    "sass": ">=1",
    "typescript": ">=5.6.2",
    "vue": ">=3"
  }
}
